<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    controllerName="masterdetailgs.masterdetailgs.controller.GameDetails">
    <Page id="gameDetailsPage" title="Game Details">
        <content>
            <VBox id="gameDetailsVBox" class="sapUiSmallMargin">
                <HBox id="_IDGenHBox1" class="gameDetailsHeader">
                    <Image id="gameCover" src="{Coverurl}" class="gameCoverImage"/>
                    <VBox id="_IDGenVBox1" class="gameDetailsText">
                        <Title id="gameName" text="{Name}" level="H1" class="gameTitle"/>
                        <Text id="gameGenre" text="{Genre}" class="gameText"/>
                        <Text id="gamePublisher" text="{Publisher}" class="gameText"/>
                        <Text id="gamePlatform" text="{Platform}" class="gameText"/>
                        <Text id="gameReleaseDate" text="" class="gameText"/>
                    </VBox>
                </HBox>
                <Text id="gameDescription" text="{Description}" class="gameDescription"/>
                <Title id="_IDGenTitle1" text="Favorited by students:" level="H2" class="favoritesTitle"/>
                <List id="favoriteGamesList" items="{FavGames}">
                    <StandardListItem id="_IDGenStandardListItem1"
                        title="{Studentid}"
                        description="{Studentid}" 
                        icon="sap-icon://person-placeholder"
                        class="favoriteItem"/>
                </List>
            </VBox>
        </content>
    </Page>
</mvc:View>
