<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="masterdetailgs.masterdetailgs.controller.StudentDetails">
    <Page id="studentDetailsPage" title="Student Details">
        <content>
            <VBox id="studentDetailsVBox" class="sapUiSmallMargin">
                <Text id="studentName" text="{Firstname} {Lastname}" class="sapUiSmallMarginBottom"/>
                <Text id="studentEmail" text="{Email}" class="sapUiSmallMarginBottom"/>
                <Toolbar id="toolbar">
                    <Title id="favGamesTitle" text="Favorite Games" />
                    <ToolbarSpacer id="toolbarSpacer" />
                    <Button id="addFavGameButton" text="Add Favorite Game" press="onAddFavoriteGame" />
                </Toolbar>
                <List id="favoriteGamesList" items="{FavGamesSet}">
                    <StandardListItem id="favGamesListItem"
                        title="{Gameid}"
                        type="Active"
                        press="onRemoveFavoriteGame">
                    </StandardListItem>
                </List>
            </VBox>
        </content>
    </Page>
</mvc:View>
